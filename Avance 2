			scanf_s("%d", &opc2);
			if (opc2 == 1)
			{
				printf("ingrese el numero del articulo");
				scanf_s("%d", &busqueda);

				//imprimir los datos por posicion 
				for (int i = 0; i < 3; i++)
				{
					if (busqueda == arting[i].numarticulo)
					{
						printf("numero de articulo: %d \n", arting[i].numarticulo);
						printf("numero de orden de compra: %d \n", arting[i].numarticulo);
						//proveedor
						printf("proveedor %s\n", arting[i].proveedor.c_str());
						printf("subtotal: %f \n", arting[i].subtotal);
						printf("iva: %f \n", arting[i].iva);
						printf("total: %f \n", arting[i].total);
					}
				}
			}
			else
			{
				for (int i = 0; i < 3; i++)
				{
					if (arting[i].numarticulo != 0)
					{
						printf("numero de articulo: %d \n", arting[i].numarticulo);
						printf("numero de orden de compra: %d \n", arting[i].numarticulo);
						//proveedor
						printf("proveedor %s", arting[i].proveedor.c_str());
						printf("subtotal: %f \n", arting[i].subtotal);
						printf("iva: %f \n", arting[i].iva);
						printf("total: %f \n", arting[i].total);
					}
				}
			}
			break;
			//A�o del art�culo
				/*int main();
				{
					int i;
					printf("Ingrese el a�o del art�culo\n");
					for (int i = 0; i <= 255; i++)
					{
						printf("%d-%c \t", i, i);
					}

					printf("\n ingrese el a%co", 164);
				}*/

		case 3://************************************** ELIMINAR (no har� nada)**********************************
			printf("ingrese el numero de orden de compra");
			scanf_s("%d", &busqueda);

			//imprimir los datos por posicion 
			for (int i = 0; i < 3; i++)
			{
				if (busqueda == arting[i].numarticulo)
				{
					arting[i].numarticulo = 0;
				}
			}
			break;

		case 4://*******************************LIMPIAR PANTALLA*************************************************
			system("cls");
			break;
		case 5://*********************************SALIR**********************************************************
			printf("saliendo... \n");
			break;
		default:
			printf("intente denuevo... \n");
			break;
		}
	} while (opcion != 5);
